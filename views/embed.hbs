<!DOCTYPE html>
<html>
  <head>
    <style type="text/css">
      video,
      audio {
        width: 100%;
      }
  </style>
  </head>
  <body>
    {{#is embed 'video'}}
      <video src="{{this.directpath}}" controls></video>
    {{/is}}
    {{#is embed 'audio'}}
      <audio src="{{this.directpath}}" controls></audio>
    {{/is}}
  </body>
</html>