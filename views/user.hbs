<!DOCTYPE html>
<html>
  <head>
    {{> shared/head}}
    <link rel="stylesheet" href="/scss/common.scss" />
    <link rel="stylesheet" href="/scss/user.scss" />
    <script src="/js/common.js"></script>
    <script src="/js/user.js"></script>
  </head>
  <body class="light">
    <header>
      {{> logo server}}
      <h1>{{user.meta.username}}</h1>
    </header>
    <div id="container">
      <ul class="tab_container">
        {{#if_eq user.meta.showing 'files' this}}
          <li class="tab active">
            <a>Files</a>
          </li>
          <li class="tab">
            <a href="?albums">Albums</a>
          </li>
        {{else}}
          <li class="tab">
            <a href="?">Files</a>
          </li>
          <li class="tab active">
            <a>Albums</a>
          </li>
        {{/if_eq}}
      </ul>
      {{#each user.items}}
        {{> preview this}}
      {{/each}}
      {{> paginator user}}
    </div>
    {{> modals}}
  </body>
</html>