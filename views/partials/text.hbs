<span class="wrapper fullwidth">
  <pre class="text">
    <code>
      {{@direct}}/{{file_id}}.{{ext original_filename}}
    </code>
  </pre>
  <div class="actions">
    {{#if_eq @signedin.username this.uploaded_by this}}
      <a class="action__delete" title="Delete this Text" data-id="/f/{{file_id}}" data-username="{{@signedin.username}}">
        <i class="icon-trash"></i>
      </a>
    {{/if_eq}}
    <a class="action__raw" title="View Raw" href="{{@direct}}/{{file_id}}.{{ext original_filename}}">
      <i class="icon-link-ext"></i>
    </a>
  </div>
</span>
